<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-7">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email"
                >Email <br />

                <% if (registerMessage) { %>
                <i class="registerMessage"
                  >This email is already registered. Please try another
                  email.</i
                >
                <% } %>
              </label>
              <input
                type="email"
                class="form-control"
                name="username"
                required
              />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                class="form-control"
                name="password"
                minlength="8"
                required
              />
            </div>
            <button type="submit" class="btn btn-outline-primary">
              Register
            </button>
          </form>
        </div>
      </div>
    </div>

    <div class="vertical-line"></div>

    <div class="col-sm-4">
      <div class="card">
        <!-- Google register -->
        <div class="card-body google-card-body">
          <a
            class="btn btn-block btn-social btn-google google-text"
            href="/auth/google"
            role="button"
          >
            <i class="fab fa-google"></i>
            Sign in with Google
          </a>
        </div>
        <!-- Facebook login -->
        <div class="card-body facebook-card-body">
          <a
            class="btn btn-block btn-social btn-facebook facebook-text"
            href="/auth/facebook"
            role="button"
          >
            <i class="fab fa-facebook-f"></i>
            Sign in with Facebook
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/header') %>
