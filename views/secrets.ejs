<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-unlock-keyhole fa-6x"></i>
    <h1 class="display-4 secret-title">Nothing but secrets.</h1>

    <!-- "My secrets", "Submit a Secret", "Log Out" buttons -->
    <div class="login-submit-buttons">
      <a class="btn btn-light btn-sm" href="/my-secrets"
        ><strong>My</strong> Secrets</a
      >
      <a
        class="btn btn-primary btn-sm button-color"
        href="/submit"
        role="button"
        >Submit a Secret</a
      >
      <a class="btn btn-danger btn-sm" href="/logout" role="button">Log Out</a>
    </div>

    <hr />

    <!-- Render all users' secrets -->
    <% usersSecrets.forEach(function (secret) { %>
    <p class="secret-text"><%= secret.secret %></p>
    <p class="secret-date"><%= secret.dateAdded %></p>
    <% }) %>
    <hr />
  </div>
</div>

<%- include('partials/footer') %>
